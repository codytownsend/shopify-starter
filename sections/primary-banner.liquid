{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="shopify-section hero-grid relative container flex flex-wrap medium--flex-nowrap overflow-hidden max-width-100vw">
    <div class="hero-wrap flex width-100 large--padding-horizontal-1 flex-column large--flex-row">
      <div class="grid relative large--width-60 large--width-75 grid-gap-1 columns-2 medium--columns-2">
        <a href=#" class="relative border-radius-3 large--border-radius-4 overflow-hidden  column-span-1 ">
          <img class="absolute absolute-fill object-fit-cover object-position-center hero-image lazyloaded" src="//milkbarstore.com/cdn/shop/files/HomepageLeft_2.jpg?format=pjpg&v=1700526255&width=1440" alt="A stack of 6 unwrapped mini peppermint bark snap cookies with candy cane bits raining down.">
        </a>
        <a href="#" class="relative border-radius-3 large--border-radius-4 overflow-hidden  column-span-1 ">
          <img class="absolute absolute-fill object-fit-cover object-position-center hero-image lazyloaded" src="//milkbarstore.com/cdn/shop/files/HomepageLeft_2.jpg?format=pjpg&v=1700526255&width=1440" alt="A stack of 6 unwrapped mini peppermint bark snap cookies with candy cane bits raining down.">
        </a>
      </div>
      <div class="large--width-40 large--width-25 flex container-wrap z-index-2 items-center medium--items-center">
        <div class="width-100 wrapper flex flex-column padding-1 padding-vertical-2 large--padding-top-0">
          <div class="title-wrap order-2 text-center">
            <h1 class="margin-0 padding-vertical-0 medium--padding-vertical-0 font-size-10 large--font-size-11 xlarge--font-size-13" style="color: #2b2b2b;line-height:1;font-family: 'Garnett Bold';">
              <span>
                <strong>HOLIDAY DESSERTS, DELIVERED.</strong>
              </span>
            </h1>
          </div>
          <div class="width-100 order-1 text-center" style="color: #2b2b2b;">
            <h2 class="margin-0 padding-vertical-1 medium--padding-vertical-1 font-size-6 large--font-size-7">
              <span>Free standard shipping on orders $100+</span>
            </h2>
          </div>
          <div class="width-100 order-3 text-center large--padding-horizontal-2" style="color: #2b2b2b">
            <p class="font-size-6 large--font-size-6 large--font-size-7 margin-0 padding-vertical-1 medium--padding-vertical-1" style="line-height:1.5;">Gifting season is in full swing and that means it’s time to go big—on flavor and celebrations. Whether you’re a chocolate mint lover, peppermint bark fan, or Milk Bar Pie aficionado, we have festive treats everyone will love. Order these limited-time treats now before they're gone - <strong>we ship nationwide straight to your door!</strong>
            </p>
          </div>
          <div class="cta-wrap flex order-4 justify-center margin-top-0 large--margin-top-0">
            <a href="#" class="button">Order Now</button>
          </div>
        </div>
      </div>
    </div>
    <style>
      #shopify-section-16426999580a5fec34 {
        background-color: #ffffff;
      }

      @media (min-width: 800px) {
        #shopify-section-16426999580a5fec34 .hero-wrap {
          min-height: 550px;
          max-height: calc(100vh - 212px);
        }
      }
    </style>
  </div>
</div>

